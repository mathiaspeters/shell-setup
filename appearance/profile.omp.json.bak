{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": 
    [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": 
            [
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "white",
                    "properties": {
                    "time_format": "15:04:05",
                    "prefix": "[",
                    "postfix": "]"
                    }
                },
                {
                    "type": "os",
                    "style": "powerline",
                    "foreground": "cyan",
                    "properties": {
                        "windows": "W11",
                        "wsl": "",
                        "wsl_separator": "",
                        "ubuntu": "WSL"
                    }
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "cyan",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#F1502F",
                    "properties": {
                        "prefix": ":: ",
                    "display_status": true,
                    "branch_identical_icon": "\uF14A",
                    "branch_gone_icon": "\u274E"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": 
            [
                {
                    "type": "exit",
                    "style": "powerline",
                    "foreground": "green",
                    "properties": {
                        "display_exit_code": false,
                        "always_enabled": true,
                        "error_color": "red",
                        "prefix": "\u276F"
                    }
                }
            ]
        }
    ]
}